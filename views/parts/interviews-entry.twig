<article class="p-8 bg-gradient-to-b from-owl-light-beige relative pb-10 rounded-3xl mb-10 lg:mb-0">
    <div class="picture mb-6">
        <a href="{{ interview.link }}">
            <picture>
                <img src="https://images.unsplash.com/photo-1492447166138-50c3889fccb1?ixlib=rb-1.2.1&raw_url=true&q=80&fm=jpg&crop=entropy&cs=tinysrgb&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=450&h=350" alt="">
            </picture>
        </a>
    </div>
    <h2 class="text-h2sm">
        <a href="{{ interview.link }}" class="transition-all delay-150 text-owl-dark-blue hover:text-owl-orange">Interview: {{ interview.meta( 'name' ) }}</a>

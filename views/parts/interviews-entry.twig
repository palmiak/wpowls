    <p class="text-base text-gray-500 mt-6">
    	{{ post.meta( 'short_bio' ) }}
    </p>

    <div class="absolute bottom-0 right-0 z-10">
        {% include 'views/parts/icons/dots-line.twig' %}
    </div>
</article>

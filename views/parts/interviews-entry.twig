{% set image = Image( interview.thumbnail ) %}
<article class="p-8 bg-gradient-to-b from-owl-light-beige dark:from-owl-dark-blue relative pb-10 rounded-3xl mb-10 lg:mb-0">
    <div class="picture mb-6 relative">
        <a class="block relative" href="{{ interview.link }}">
			<div class="owl-gradient inset-0 z-10 mix-blend-overlay opacity-75 rounded-tr-[50px]"></div>
            <picture class="block rounded-tr-[50px]">
                <source media="(max-width:767px)"
					srcset="{{ image|resize( 650, 550 )|towebp }}" />

				<source media="(min-width: 768px) and (max-width:1023px)"
					srcset="{{ image|resize( 680, 550 )|towebp }}" />

				<img class="rounded-tr-[50px]" src="{{ image|resize( 450, 380 )|towebp }}"
					alt="{{ image.alt }}" loading="lazy">
            </picture>
        </a>
    </div>
    <h2 class="text-h2sm">
        <a href="{{ interview.link }}" class="text-owl-dark-blue hover:text-owl-orange dark:text-owl-light-green dark:hover:text-owl-dark-beige">
			<span class="uppercase text-sm font-owlFont text-owl-orange mb-1 block">Interview:</span>
			{{ interview.meta( 'name' ) }}
		</a>
    </h2>
    <p class="text-base text-gray-500 dark:text-owl-dark-beige mt-6">
    	{{ interview.meta( 'short_bio' ) }}
    </p>

    <div class="absolute bottom-0 right-8 z-10">
        {% include 'views/parts/icons/dots-line.twig' %}
    </div>
</article>

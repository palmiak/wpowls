<footer id="footer" class="container mx-auto px-4 my-10">
	<div class="flex flex-row content-center justify-center text-center">
		{% include 'views/parts/logo.twig' %}
	</div>

	<ul class="block md:flex md:flex-row md:gap-x-6 items-center text-center content-center justify-center mt-10 md:mt-20">
	{% for item in menu.footer.get_items %}
		<li>
			<a class="hover:text-owl-orange transition-all delay-150" href="{{ item.link }}" target="{{ item.target }}" {{ item.target == '_blank' ? 'rel="noopener"' }}>
				{{ item.title }}
			</a>
		</li>
	{% endfor %}
	</ul>

	<p class="text-sm mt-10 text-owl-medium-blue text-center">
		{{ site.name }} &copy; {{ now|date('Y') }}. Crafted with love by <a href="https://maciekpalmowski.dev/" rel="noopener" target="_blank" title="Maciej Palmowski - WordPress Developer & DevRel Specialist" class="hover:text-owl-orange text-owl-blue">Maciej Palmowski</a> and <a href="https://agnieszkapalmowska.myportfolio.com/" target="_blank" title="Agnieszka Palmowska - UI Designer" rel="noopener" class="hover:text-owl-orange text-owl-blue">Agnieszka Palmowska</a>
	</p>

	<div class="links flex flex-row gap-x-6 items-center content-center justify-center mt-10">
		{% if options.facebook %}
		<a href="{{ options.facebook }}" target="_blank" rel="noopener" aria-label="facebook">
			{% include 'views/parts/icons/facebook.twig' %}
		</a>
		{% endif %}
		{% if options.linkedin %}
		<a href="{{ options.linkedin }}" target="_blank" rel="noopener" aria-label="linkedin">
			{% include 'views/parts/icons/linkedin.twig' %}
		</a>
		{% endif %}
		{% if options.instagram %}
		<a href="{{ options.instagram }}" target="_blank" rel="noopener" aria-label="instagram">
			{% include 'views/parts/icons/instagram.twig' %}
		</a>
		{% endif %}
		{% if options.twitter %}
		<a href="{{ options.twitter }}" target="_blank" rel="noopener" aria-label="twitter">
			{% include 'views/parts/icons/twitter.twig' %}
		</a>
		{% endif %}
		{% if options.anchor %}
		<a href="{{ options.anchor }}" target="_blank" rel="noopener" aria-label="anchor">
			{% include 'views/parts/icons/anchor.twig' %}
		</a>
		{% endif %}
	</div>
</footer>
